<div class="row">
  <div class="container">
    <div class="col-md-12">    
      <div class="panel panel-primary">
        <div class="panel-heading"><i class="fa fa-users"></i> Provider List</div>
        <div class="panel-body">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Rif</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Address</th>
                <th>Status</th>
                <th>Client</th>
                <th>Edit</th>
              </tr>
            </thead>
            <tbody>
              <% @students.each do |student| %>
              <tr>
                <td><%= student.name %></td>
                <td><%= student.identification %></td>
                <td><%= student.phone %></td>
                <td><%= student.email %></td>
                <td><%= student.adress %></td>
                <td><%= student.active %></td>
                <td><%= link_to "Client", client_path(student.client_id), class:"btn btn-default" %></td>
                <td><%= link_to "Edit", edit_student_path(student), class:"btn btn-default" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <%= link_to "Create Student", new_student_path, class:"btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>