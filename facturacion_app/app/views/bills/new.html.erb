<div class="row">
	<div class="container">
		<div class="col-md-offset-2 col-md-8">    
			<div class="panel panel-primary">
				<div class="panel-heading"><i class="fa fa-plus-square"></i> New Bill</div>
				<div class="panel-body">
					<%= semantic_form_for @bill do |f| %>
					<div class="row">
						<div class="col-md-6">
							<%= f.input :client_name %>
						</div>
						<div class="col-md-6">
							<%= f.input :client_rif, :disabled => true %>
						</div>
						<div class="col-md-6">
							<%= f.input :client_phone %>
						</div>
						<div class="col-md-6">
							<%= f.input :client_email %>
						</div>	
						<div class="col-md-6">
							<%= f.input :bill_number, placeholder: "Insert Number Bill" %>
						</div>
						<div class="col-md-6">
							<%= f.input :bill_control, placeholder: "Insert Control Number Bill" %>
						</div>
						<div class="col-md-12">
							<%= f.input :payment_date %>
						</div>
						<div class="col-md-12">
							<%= f.input :issue_date %>
						</div>
					</div>
					<div class="row">
						<div class="col-md-9">
							<%= f.input :detail %>
						</div>
						<div class="col-md-3">
							<%= f.input :quantity, placeholder: "Service quantity" %>						
						</div>
					</div>

					<div class="row">
						<div class="col-md-6">
							<div class="row">
								<div class="col-md-12">
									<%= f.input :status, placeholder: "pendiente/cancelada" %>
								</div>
								<div class="col-md-6">
									<%= f.input :client_id %>
								</div>
								<div class="col-md-6">
									<%= f.input :service_id %>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="row"> 
								<div class="col-md-6">
									<%= f.input :tax, placeholder: "Tax" %>
								</div>
								<div class="col-md-6">
									<%= f.input :unit_price, placeholder: "Unit Price" %>
								</div>
								<div class="col-md-offset-6 col-md-6">
									<%= f.input :bill_total, placeholder: "Total Price" %>
								</div>
							</div>
						</div>
					</div>
					<%= f.action :submit, :label => "Submit", :button_html => { :class => "btn btn-primary"} %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>