<div class="row">
	<div class="container">
		<div class="col-md-offset-2 col-md-8">    
			<div class="panel panel-primary">
				<div class="panel-heading"><i class="fa fa-plus-square"></i> New Provider Bill</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-md-12">
							<%= semantic_form_for @provider_bill do |f| %>
							<%= f.input :bill_number, placeholder: "Number Bill" %>
							<%= f.input :description, placeholder: "Descrption" %>
							<%= f.input :amount, placeholder: "Insert Amount" %>
							<%= f.input :status, placeholder: "pendiente/pagada" %>
						</div>
						<div class="col-md-2">
							<%= f.input :provider_id, placeholder: "Insert provider" %>
						</div>		
					</div>		
					<%= f.action :submit, :label => "Submit", :button_html => { :class => "btn btn-primary"} %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>