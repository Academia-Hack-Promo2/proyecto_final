<div class="row">
	<div class="container">
		<div class="col-md-offset-2 col-md-8">    
			<div class="panel panel-primary">
				<div class="panel-heading"><i class="fa fa-plus-square"></i> New Client</div>
				<div class="panel-body">
					<%= semantic_form_for @client do |f| %>
					<%= f.input :name, placeholder: "Insert name" %>
					<%= f.input :rif, placeholder: "Insert Fiscal Information Registration" %>
					<%= f.input :phone, placeholder: "Insert Phone" %>
					<%= f.input :email, placeholder: "Insert name" %>
					<%= f.input :address, placeholder: "Insert Address" %>
					<%= f.action :submit, :label => "Submit", :button_html => { :class => "btn btn-primary"} %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>