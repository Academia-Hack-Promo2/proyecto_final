<div class="row">
  <div class="container">
    <div class="col-md-12">    
      <div class="panel panel-primary">
        <div class="panel-heading"><i class="fa fa-users"></i> Clients List</div>
        <div class="panel-body">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Rif</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Address</th>
              </tr>
            </thead>
            <tbody>
              <% @clients.each do |client| %>
              <tr>
                <td><%= client.name %></td>
                <td><%= client.rif %></td>
                <td><%= client.phone %></td>
                <td><%= client.email %></td>
                <td><%= client.address %></td>
                <td><%= link_to "Edit", edit_client_path(client), class:"btn btn-default" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <%= link_to "Create Client", new_client_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>