<div class="row">
	<div class="container">
		<div class="col-md-offset-2 col-md-8">    
			<div class="panel panel-primary">
				<div class="panel-heading"><i class="fa fa-plus-square"></i> New Service</div>
				<div class="panel-body">
					<%= semantic_form_for @service do |f| %>
					<%= f.input :name %>
					<%= f.input :details %>
					<%= f.input :amount %>
					<%= f.action :submit, :label => "Submit", :button_html => { :class => "btn btn-primary"} %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>