<div class="row">
  <div class="container">
    <div class="col-md-12">    
      <div class="panel panel-primary">
        <div class="panel-heading"><i class="fa fa-users"></i> Serveices List</div>
        <div class="panel-body">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Details</th>
                <th>Amount</th>
              </tr>
            </thead>
            <tbody>
              <% @services.each do |ser| %>
              <tr>
                <td><%= ser.name %></td>
                <td><%= ser.details %></td>
                <td><%= ser.amount %></td>
                <td><%= link_to "Edit", edit_service_path(ser), class:"btn btn-default" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <%= link_to "Create Service", new_service_path, class:"btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>

